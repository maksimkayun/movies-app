@using System.Linq
@model MoviesApp.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Title"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ReleaseDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ReleaseDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Genre"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Price"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            <label asp-for="@Model.MoviesArtists.First().Artist.FirstName"></label>
        </th>
        <th>
            <label asp-for="@Model.MoviesArtists.First().Artist.LastName"></label>
        </th>
        <th>
            <label asp-for="@Model.MoviesArtists.First().Artist.Birthday"></label>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.MoviesArtists)
    {
        <tr>
            <td>
                @item.Artist.FirstName
            </td>
            <td>
                @item.Artist.LastName
            </td>
            <td>
                @item.Artist.Birthday.ToString("dd.MM.yyyy")
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>