@using System.Linq
@model IEnumerable<MoviesApp.ViewModels.FilmsViewModel>

@{
    ViewData["Title"] = "Films";
}

<h1>Films</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            <label asp-for="@Model.First().Title"></label>
        </th>
        <th>
            <label asp-for="@Model.First().ReleaseDate"></label>
        </th>
        <th>
            <label asp-for="@Model.First().Genre"></label>
        </th>
        <th>
            <label asp-for="@Model.First().Price"></label>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.ReleaseDate.ToString("dd.MM.yyyy")
            </td>
            <td>
                @item.Genre
            </td>
            <td>
                @item.Price
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>